// For format details, see https://containers.dev/implementors/json_reference/ .
{
    "name": "Test",
    "build": {
        "dockerfile": "Dockerfile"
    },

    "remoteUser": "devuser",
    "overrideCommand": false,
    // NOTE: I'm using podman on fedora. docker isn't tested yet.
    "runArgs": ["--systemd", "always", "--tty"],
    "privileged": false,
    "capAdd": [
        "SYS_PTRACE",
        "SYS_ADMIN",
        "MKNOD",
        //"NET_ADMIN",
        "NET_RAW",
        "BPF",
        "SYS_RESOURCE",
        "SYS_NICE",
        "IPC_LOCK",
        "PERFMON"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "llvm-vs-code-extensions.vscode-clangd",
                "mesonbuild.mesonbuild",
                "ms-vscode.cmake-tools",
                "llvm-vs-code-extensions.lldb-dap"
            ]
        }
    }
}
